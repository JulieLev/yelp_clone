<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h2>
    <h3> <%= restaurant.description %> </h3>

    <% if restaurant.reviews.any? %>
      <% restaurant.reviews.each do |review| %>
        <%= review.thoughts %>
        <%= review.rating %>
        <br>
      <% end %>
    <% else %>
      No reviews yet
      <br>
    <% end %>

    <br>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
      <%#= if user_signed_in? && (current_user.id == restaurant.user) %>
      <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %> <br>
      <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %> <br>
      <%#= end %>
  <% end %>
<% else %>
  No restaurants yet
<% end %>

<% if user_signed_in? %>
  <br><br><%= link_to "Add a restaurant", new_restaurant_path %>
<% end %>
